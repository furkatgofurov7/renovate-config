{
    "extends": [
      ":npm",
      ":docker",
      ":separateMajorReleases",
      ":combinePatchMinorReleases",
      ":ignoreUnstable",
      ":prImmediately",
      ":semanticPrefixFixDepsChoreOthers",
      ":updateNotScheduled",
      ":automergeDisabled",
      ":ignoreModulesAndTests",
      ":autodetectPinVersions",
      ":prHourlyLimit4",
      ":prConcurrentLimit20",
      "group:monorepos",
      "group:recommended",
      "helpers:disableTypesNodeMajor",
      ":semanticCommitsDisabled",
      ":maintainLockFilesDisabled",
      "schedule:nonOfficeHours",
      ":noUnscheduledUpdates"
    ],
    "assignees": ["furkatgofurov7"],
    "reviewers": ["namnx228"],
    "includeForks": true,
    "timezone": "Europe/Helsinki",
    "automerge": false,
    "major": {
      "automerge": false,
      "enabled": false
    },
    "lockFileMaintenance": {
      "enabled": true
    },
    "vulnerabilityAlerts": {
      "enabled": false
    },
    "labels": [
      "dependencies"
    ],
    "supportPolicy": [
      "lts"
    ],
    "rangeStrategy": "replace",
    "masterIssue": true,
    
    "packageRules": [
      {
        "packagePatterns": [
          "*"
        ]
      },
      {
        "depTypeList": [
          "devDependencies"
        ],
        "masterIssueApproval": true
      },
      {
        "packageNames": [
          "aws-sdk",
          "angular",
          "angular-animate",
          "angular-scroll",
          "angular-sanitize",
          "^stylelint",
          "remark-lint"
        ],
        "extends": ["schedule:monthly"]
      },
      {
        "datasources": ["docker"],
        "labels": ["docker-update"],
        "updateTypes": [
          "major",
          "minor"
        ],
        "enabled": true
      },     
      {
        "depTypeList": [
          "dependencies"
        ],
        "rangeStrategy": "auto"
      },
      {
        "packagePatterns": [
          "^vscode"
        ],
        "groupName": "vscode monorepo",
        "groupSlug": "vscode",
        "enabled": true
      },
      {
        "packagePatterns": [
          "^vscode-python"
        ],
        "groupName": "vscode-python monorepo",
        "groupSlug": "vscode-python",
        "enabled": true
      },
      {
        "packagePatterns": [
          "^docker-curriculum"
        ],
        "rangeStrategy": "auto",
        "groupName": "docker-curriculum monorepo",
        "groupSlug": "docker-curriculum",
        "enabled": true
      },
      {
        "packagePatterns": [
          "^awesome-README-templates"
        ],
        "rangeStrategy": "auto",
        "groupName": "awesome-README-templates monorepo",
        "groupSlug": "awesome-README-templates",
        "enabled": true
      },
      {
        "packagePatterns": [
          "github-readme-stats"
        ],
        "rangeStrategy": "auto",
        "groupName": "github-readme-stats monorepo",
        "groupSlug": "github-readme-stats",
        "enabled": true
      },
      {
        "packagePatterns": [ "eslint" ],
        "groupName": "eslint"
      },
      {
        "packageNames": ["husky"],
        "packagePatterns": ["^@husky/"],
        "groupName": "husky monorepo"
       }
    ],
    "ignoreDeps": [
      "bower"
    ]
  }
